<div class="field ">
	<%= f.label :title ,"◇ タイトル" %>
	<%= f.text_field :title, class: "form-control" %>
</div>

<div class="field ">
	<%= f.label :start_season, "◇ 希望時期" %><br />
	<%= f.date_select :start_season, discard_day: true, class: "form-control" %>&emsp;〜&emsp;
	<%= f.date_select :finish_season, discard_day: true, class: "form-control" %>
</div>

<div class="field ">
	<%= f.label :location, "◇ 出荷先/開催地" %><br />
	<%= render 'layouts/location_select',f:f %>
</div>

<div class="field ">
	<%= f.label :category, "◇ カテゴリー" %><br />
	<%= f.select :category,[["農作物出荷", "0"],["体験/イベント", "1"],["その他","2"]],  class: "form-control" %><br />
</div>

<div class="field ">
	<%= f.label :body, "◇ 希望内容/相談内容" %>
	<%= f.text_area :body, rows:"5", class: "form-control" %>
</div>
