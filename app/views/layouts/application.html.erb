<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Collaboro</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application' %>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

    </head>

    <body>
        <header>
            <div class="container">
                <div class="header-left clearfix">
                    <%= link_to "Collaboro!!",:blogs ,class: "logo"%>
                </div>
                <ul class="header-right nav-list clearfix">

                    <!-- ログインユーザー -->
                    <% if f_user_signed_in? %>
                        <li class="nav-list-item">
                            <%= link_to "マイファーム",current_f_user %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "コラボ先を探す", :requests %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "商談ルーム", :chatrooms %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "旬ネタ", :blogs %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "ログアウト", :destroy_f_user_session, method: :delete %>
                        </li>
                        <% elsif c_user_signed_in? %>
                        <li class="nav-list-item">
                            <%= link_to "マイページ", current_c_user %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "コラボ先を探す", :proposals %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "商談ルーム", :chatrooms %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "旬ネタ", :blogs %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "ログアウト", :destroy_c_user_session,method: :delete %>
                        </li>

                    <!-- 未ログインユーザー -->
                    <% else %>
                        <li class="nav-list-item">
                            <%= link_to  "農家の方はこちら", :new_f_user_session %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "企業の方はこちら", :new_c_user_session %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "旬ネタ", :blogs %>
                        </li>
                        <li class="nav-list-item">
                            <%= link_to "コラボ先を探す", :root %>
                        </li>
                    <% end %>

                </ul>
          </div>
        </header>

        <div class="main">
            <%= yield %>
        </div>
    </body>
</html>
