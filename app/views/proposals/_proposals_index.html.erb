<!-- ===== カード ===== -->
<div class="col-md-4 col-sm-6">
	<div class="proposalCard">

		<!-- === 画像 & リボン === -->
		<div class="proposalCard-image ribbon_box">
			<!-- リボン(赤) -->
			<% if proposal.category == "農作物出荷" %>
				<span class="proposalCard-ribbon ribbon0"><%= proposal.category%></span>
				<%= link_to attachment_image_tag(proposal, :p_image, fallback:"/images/Vegetables.png",class: "img-responsive"),proposal_path(proposal)  %>
			<!-- リボン(水色) -->
			<% elsif proposal.category == "体験/イベント" %>
				<span class="proposalCard-ribbon ribbon2"><%= proposal.category%></span>
				<%= link_to attachment_image_tag(proposal, :p_image, fallback:"/images/Experience.png",class: "img-responsive"),proposal_path(proposal) %>
			<!-- リボン(緑) -->
			<% else %>
				<span class="proposalCard-ribbon ribbon3"><%= proposal.category%></span>
				<%= link_to attachment_image_tag(proposal, :p_image, fallback:"/images/Vegetables.png",class: "img-responsive"),proposal_path(proposal)  %>
			<% end %>
		</div>

		<!-- === テキスト === -->
		<div class="proposalCard-thum">
			<div class="content">
				<h4>
					<%= link_to proposal_path(proposal) do%>
					<%= truncate(proposal.title, :omission => "...") %>
					<% end %>
				</h4>
				<p>
					<span class="item"><i class="fas fa-calendar-alt"></i>&ensp;出荷時期/開催時期</span>&emsp;
					<b><%= proposal.start_season.strftime('%Y年%m月') %>~<%= proposal.finish_season.strftime('%Y年%m月') %></b><br>
					<span class="item"><i class="fas fa-map-marker-alt"></i>&ensp;出荷元/開催地</span>&emsp;&emsp;&emsp;&ensp;
					<b><%= proposal.location %></b>
				</p>
			</div>
			<div class="proposalCard-user">
				<i class="fas fa-home"></i>&ensp;<%= link_to proposal.f_user.farm,f_user_path(proposal.f_user)%>
			</div>
			<!-- bookmarkマーク -->
			<%= render 'favorite_hearts/bookmarks',proposal:proposal %>
		</div>

	</div>
</div>

