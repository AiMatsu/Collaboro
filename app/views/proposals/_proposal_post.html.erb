<!-- ===== エラーメッセージ ===== -->
<% if @proposal.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
		<ul>
			<%= @proposal.errors.count %>件のエラーが発生しました。
			<% @proposal.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<!-- ===== 入力フォーム ===== -->
<div class="field ">
	<%= f.label :title ,"◇ タイトル" %>
	<%= f.text_field :title, class: "form-control" %>
</div>

<div class="field ">
	<%= f.label :start_season, "◇ 出荷時期/開催時期" %><br />
	<%= f.date_select :start_season, discard_day: true, class: "form-control" %>&emsp;〜&emsp;
	<%= f.date_select :finish_season, discard_day: true, class: "form-control" %>
</div>

<div class="field ">
	<%= f.label :location, "◇ 出荷元/開催地" %><br />
	<%= render 'layouts/location_select',f:f %>
</div>

<div class="field ">
	<%= f.label :category, "◇ カテゴリー" %><br />
	<%= f.select :category,[["農作物出荷","農作物出荷": 0],["体験/イベント", "体験/イベント": 1],["その他","その他": 2]],  class: "form-control" %><br />
</div>

<div class="field ">
	<%= f.label :body, "◇ できること/提案内容" %>
	<%= f.text_area :body, rows:"5", class: "form-control" %>
</div>

<div class="field ">
	<%= f.label :p_image,"◇ 写真" %>
	<%= f.attachment_field :p_image %>
</div>