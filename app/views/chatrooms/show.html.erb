<div class="container">
	<h3>
		<span class="glyphicon glyphicon-comment"></span>
		<% if @f_user == current_f_user %>
			<%= @c_user.company %>&ensp;/&ensp;<%= @c_user.name %>&ensp;さん
		<% elsif @c_user == current_c_user %>
		    <%= @f_user.farm %>&ensp;/&ensp;<%= @f_user.name %>&ensp;さん
		<% end %>
	</h3>

	<!-- -- メッセージ一覧 -- -->
	<div class="messages ">
		<% @messages.each do |message|%>
			<div class="row">
				<% if current_f_user %>
					<!-- チャット相手からのメッセージ -->
					<% if message.f_user == false %>
						<div class="col-md-1 col-md-offset-1">
							<%= render 'messages/c_user_image',c_user:@c_user %>
						</div>
						<div class="balloon-left col-md-7">
							<%= render 'messages/messages',message:message %>
						</div>
					<!-- 自分が送ったメッセージ -->
					<% else %>
						<div class="balloon-right col-md-offset-3 col-md-7">
							<%= render 'messages/messages',message:message %>
						</div>
						<div class="col-md-1">
							<%= render 'messages/f_user_image',f_user:@f_user %>
						</div>
					<% end %>
				<% elsif current_c_user %>
				　　<!-- チャット相手からのメッセージ -->
					<% if message.f_user == true %>
						<div class="col-md-1 col-md-offset-1">
							<%= render 'messages/f_user_image',f_user:@f_user %>
						</div>
						<div class="balloon-left col-md-7">
							<%= render 'messages/messages',message:message %>
						</div>
					<!-- 自分が送ったメッセージ -->
					<% else %>
						<div class="balloon-right col-md-offset-3 col-md-7">
							<%= render 'messages/messages',message:message %>
						</div>
						<div class="col-md-1">
							<%= render 'messages/c_user_image',c_user:@c_user %>
						</div>
					<% end %>
				<% end %>
			</div>
		<% end %>
	</div>

	<!-- -- メッセージ入力欄 -- -->
	<div class="message-form form-group">
		<%= form_for @message_new,url:chatroom_messages_path(@chatroom) do |f| %>
		<div class="field ">
			<%= f.label :text, "メッセージ入力" %>
			<%= f.text_area :text, rows:"3", class: "form-control" %>
		</div>
		<p class="actions">
			<%= f.submit "送信する" ,class: "btn btn-block btn-default btn-xs"%>
			<%= link_to '戻る', chatrooms_path ,class: "btn btn-block btn-default btn-xs"%>
		</p>
		<% end %>
	</div>

</div>
