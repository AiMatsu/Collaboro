<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 form-group">
			<h3 class="glyphicon glyphicon-cog">マイページ・基本情報編集</h3>
			<%= form_for(@user) do |f| %>

				<div class="field ">
					<%= f.label :image,"◇ プロフィール写真" %>
					<%= f.attachment_field :image %>
				</div>

				<div class="field ">
					<%= f.label :name,"◇ 担当者名(お名前)" %>
					<%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder:"山田太郎",class: "form-control" %>
				</div>

				<div class="field ">
					<%= f.label :company,"◇ 企業名" %>
					<%= f.text_field :company, autofocus: true, autocomplete: "company",placeholder:"コラボロ社",class: "form-control" %>
				</div>

				<div class="field ">
					<%= f.label :industry,"◇ 業種" %><br />
					<%= f.select :industry,[["飲食店", "飲食店"],["メーカー", "メーカー"],["旅行","旅行"],["広告","広告"],["イベント","イベント"],["その他","その他"]], autofocus: true,class: "form-control" %><br />
				</div>

				<div class="field ">
					<%= f.label :profile,"◇ 企業紹介文" %>
					<%= f.text_area :profile, autofocus: true,class: "form-control" %>
				</div>

				<div class="field ">
					<%= f.label :hp_url,"◇ 企業のHP" %>
					<%= f.text_field :hp_url, autofocus: true,class: "form-control" %>
				</div>

				<div class="field ">
					<%= f.label :post_code,"◇ 企業の郵便番号" %>
					<%= f.text_field :post_code, autofocus: true, autocomplete: "post_code",placeholder:"0000000",class: "form-control" %>
				</div>

				<div class="field ">
					<%= f.label :address,"◇ 企業の所在地" %>
					<%= f.text_area :address, autofocus: true, autocomplete: "address",class: "form-control"  %>
				</div>

				<div class="field ">
					<%= f.label :conv_time,"◇ 連絡の取りやすい時間" %>
					<%= f.text_field :conv_time, autofocus: true, autocomplete: "conv_time",placeholder:"平日9:00~18:00",class: "form-control"  %>
				</div>

				<div class="field ">
					<%= f.label :tell,"◇ 電話番号 ※非公開" %>
					<%= f.text_field :tell, autofocus: true, autocomplete: "tell" ,placeholder:"00000000000",class: "form-control" %>
				</div>
				
				<div class="field ">
					<%= f.label :email,"◇ メールアドレス ※非公開" %>
					<%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
				</div>
				<p class="actions">
					<%= f.submit "基本情報を更新する" ,class: "btn btn-block btn-default btn-xs"%>
				</p>
			<% end %>
		</div>
	</div>
</div>