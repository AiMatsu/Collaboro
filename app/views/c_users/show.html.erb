<div class="container">
	<% if @user == current_c_user %>
		<h3><b>マイページ</b></h3>
	<% else %>
		<h3><%= @user.company %></h3>
	<% end %>

	<!-- サクセスメッセージ -->
	<p id="notice"><%= notice %></p>

	<!-- -- 共通 -- -->
	<div class="row">
		<div class="company-name col-md-6">
		</div>
		<div id="tab-menu" class="col-md-6 clearfix" >
			<a href="#tab-info" class="btn col-md-4 col-md-offset-4">基本情報</a>
			<a href="#tab-request" class="btn col-md-4">コラボリクエスト</a>
		</div>
	</div>

	<div id="tab-contents">
		<!-- -- 基本情報 -- -->
		<div id="tab-info" class="tab">
			<div class="row item">
				<p class="item-title">基本情報</p>
				<div class="col-md-4">
					<%= attachment_image_tag @user, :image, fallback: "company.png" ,class: "img-responsive img-thumbnail"%>
				</div>
				<div class="col-md-8">
					<table class="table table-hover">
						<tr>
							<th width="30%">◇&emsp;企業名</th>
							<td width="70%"><%= @user.company %></td>
						</tr>
						<tr>
							<th width="30%">◇&emsp;業種</th>
							<td width="70%"><%= @user.industry %></td>
						</tr>
						<tr>
							<th width="30%">◇&emsp;担当者名</th>
							<td width="70%"><%= @user.name %></td>
						</tr>
						<tr>
							<th width="30%">◇&emsp;企業紹介</th>
							<td width="70%"><%= @user.profile %></td>
						</tr>
						<tr>
							<th width="30%">◇&emsp;企業のHP</th>
							<td width="70%"><%= @user.hp_url %></td>
						</tr>
						<tr>
							<th width="30%">◇&emsp;所在地</th>
							<td width="70%"><%= @user. address %></td>
						</tr>
						<tr>
							<th width="30%">◇&emsp;連絡の取りやすい時間</th>
							<td width="70%"><%= @user.conv_time %></td>
						</tr>
					</table>
					<div class="link-btn">
						<% if @user == current_c_user %>
							<%= link_to "基本情報を編集する",edit_c_user_path(current_c_user),class: "btn btn-default col-md-7 " %>
							<%= link_to "退会する",c_user_path(@user), method: :delete, data: { confirm: '本当に退会しますか？'} ,class: "btn btn-default col-md-4 col-md-offset-1" %>
						<% elsif  @f_user  %>
							<%= link_to "担当者と連絡を取る",chatroom_path(current_f_user),class: "btn btn-block btn-default" %>
						<% else %>
							<%= link_to "担当者と連絡を取る",chatroom_path(current_c_user),class: "btn btn-block btn-default" %>
						<% end %>
					</div>
				</div>
			</div>
			<!-- google map表示 -->
			<div class="map row item">
				<p class="item-title">地図</p>

				<iframe
				width="80%"
				height="450"
				frameborder="0" style="border:0"
				src=<%= "https://www.google.com/maps/embed/v1/search?key=AIzaSyCBmiOl7x8qmCn5uaDjzU2cJgvNBeZfWfA=#{@user.address}" %> allowfullscreen>
			　　　</iframe>
			</div>
		</div>

		<!-- -- コラボリクエスト -- -->
		<div id="tab-request" class="tab">
			<div class="item">
				<p class="item-title">
					コラボリクエスト
					<span class="link-btn">
					<% if @user == current_c_user %>
						&emsp;<%= link_to "",new_request_path,class: "glyphicon glyphicon-pencil" %>
					<% end %>
					</span>
				</p>
				<div class=" row c_user_requests">
				<% @requests.each do |request| %>
				<%= render 'requests/requests_index',request:request %>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>


<!-- -- JS/TABU切り替え -- -->
<script>
	$(function(){
		$('#tab-contents .tab[id != "tab-info"]').hide();
		$('#tab-menu a').on('click', function() {
			$("#tab-contents .tab").hide();
			$("#tab-menu .active").removeClass("active");
			$(this).addClass("active");
			$($(this).attr("href")).show();
			return false;
		});
	});
</script>